{
  "env": {
    "commonjs": true,
    "es2017": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "overrides": [
    {
      "env": {
        "jest/globals": true
      },
      "files": ["**/*.test.js"],
      "plugins": ["jest"]
    }
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 9
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error"
  }
}
